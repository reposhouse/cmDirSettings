{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"root": true,
	"files": {
		"includes": [
			"**/*",
			"!node_modules/**",
			"!dist/**",
			"!build/**",
			"!out/**",
			"!.claspignore",
			"!.env"
		]
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "off",
				"noUnusedImports": "off"
			},
			"style": {
				"useNodejsImportProtocol": "off"
			}
		}
	}
}
